<Context path="/ROOT" docBase="${catalina.home}/webapps/ROOT">
  <Resources allowLinking="true" />
  <Resource name="jdbc/MISODB" type="javax.sql.DataSource"
    driverClassName="com.mysql.jdbc.Driver"
    initialSize="32"
    maxIdle="10"
    maxTotal="100"
    maxWaitMillis="1000"
    removeAbandoned="true"
    removeAbandonedTimeout="120"
    logAbandoned="true"
    testWhileIdle="true"
    testOnBorrow="true"
    testOnReturn="true"
    validationQuery="select 1"
    url="jdbc:mysql://${misohostport}/${misodb}?autoReconnect=true&amp;characterEncoding=UTF-8&amp;allowPublicKeyRetrieval=true&amp;sslMode=DISABLED&amp;connectionTimeZone=SERVER"
    username="${misouser}"
    password="${misopass}" />
  <Parameter name="miso.propertiesFile"
    value="file:${catalina.home}/conf/Catalina/localhost/miso.properties" override="false" />
</Context>